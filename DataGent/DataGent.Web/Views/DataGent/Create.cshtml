@model DataGent.Web.ViewModels.CommentaarCreate_VM

@{
    ViewData["Title"] = "Create new comment";
}

<table class="table">
    <thead>
        <tr>
            <th>
                Naam
            </th>
            <th>
                Straat
            </th>
            <th>
                Nummer
            </th>
            <th>
                Postcode
            </th>
            <th>
                Webadres
            </th>
            <th>
                Telefoon
            </th>
            <th>
                Categorie
            </th>
            <th>
                Opmerkingen
            </th>

        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Stad.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Stad.Straat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Stad.Nummer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Stad.Postcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Stad.Webadres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Stad.Telefoon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Stad.Categorie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Stad.Opmerkingen)
            </td>
        </tr>
    </tbody>
</table>


<hr />

<p>Voeg hier uw extra commentaar in over @Model.Stad.Naam</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Stad.Id" />
            <input type="hidden" asp-for="Stad.Naam" />
            <input type="hidden" value="@Html.AntiForgeryToken()" />

            <div class="form-group">
                <label asp-for="Commentaar" class="control-label"></label>
                <input asp-for="Commentaar" class="form-control" />
                <span asp-validation-for="Commentaar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

