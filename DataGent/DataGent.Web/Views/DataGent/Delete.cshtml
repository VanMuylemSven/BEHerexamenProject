@model DataGent.Models.StadCommentaar

@{
    ViewData["Title"] = "View";
}

<h3>Are you sure you want to delete this comment?</h3>

<hr />

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Commentaar
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.Commentaar.CommentaarText)
                    (@Html.DisplayFor(modelItem => Model.Commentaar.Tijdstip))
                </td>
            </tr>
        </tbody>
    </table>

    <hr />
    
    <form asp-action="Delete">
        <input type="hidden" name="commentaarId" asp-for="Commentaar.CommentaarId" />
        <input type="hidden" name="stadId" asp-for="Commentaar.StadId" />
        <input type="hidden" value="@Html.AntiForgeryToken()" />

        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
